<%- partial('partials/header') %>

<div class="container page">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="content-frame">
        <h1 class="text-color-1">Welcome back!</h1>
        <br>
        <a href="/auth/facebook"><button class="btn btn-lg btn-facebook btn-block btn-wrap" type="submit">Continue with Facebook</button></a>
        <br>
        <p class="text-color-g">We'll never post anything on Facebook without your permission.</p>
        <br>
        <div class="text-strikethru">
          <div class="line"></div>
          <div class="text">or log in with username</div>
        </div>
        <form class="form-signin form-style" role="form" action="/auth/login" method="POST">
          <div class="form-group">
            <input type="text" class="form-control input-1 margin-tb-sm" placeholder="Username" name="username">
          </div>
          <div class="form-group">
            <input type="password" class="form-control input-1 margin-tb-sm" placeholder="Password" name="password">
          </div>
          <button class="btn btn-lg btn-1 btn-block" type="submit">Log me in!</button><br>
        </form>
      </div>
      <div class="content-frame-footer">
        <p>New to Fund the Future? <strong><a href="/auth/register" class="text-color-1">Register</a></strong>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>

<%- partial('partials/footer') %>
