<%- partial('partials/header') %>

<div class="container page">
  <center>
    <h1 class="text-color-1"><%= project.name %></h1>
    <p>by <span class="text-color-1"><%= project.owner.first_name %> <%= project.owner.last_name %></span><p>
  </center>
</div>
<br />
<div id="supportModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <form class="form-style" role="form" action="/projects/<%= project.id %>/fund" method="POST">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title">Support <%= project.name %></h3>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <h4>PHP </h4>
            <input type="number" value="500" name="amount" class="form-control input-1 margin-tb-sm" placeholder="Amount" />
          </div> 
        </div>
        <div class="modal-footer">
          <button class="btn btn-lg btn-1 btn-block" type="submit">Let&quot;s go!</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="image-container">
        <img class="details-image" src="<%= project.image_path %>" alt="<%= project.name %>">
      </div>
      <br>
      <div class="content-frame">
        <h2 class="text-color-b"><%= project.description %></h2>
        <p class="text-color-1"><span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
          <%= project.category.name %></p>
        <hr>
        <p class="text-color-lg"><%= project.content %></p>
      </div>
      <hr>
    </div>
    <div class="col-md-4">
      <div class="center-mobile">
        <h1 class="text-color-b no-margin-b"><%= project.funds.length %></h1>
        <p class="text-lg text-color-g">supporters</p>
        <h1 class="text-color-b no-margin-b">₱<%= project.total %></h1>
        <p class="text-lg text-color-g">total amount raised of ₱<%= project.goal %> goal</p>
        <h1 class="text-color-b no-margin-b"><%= project.days_left %></h1>
        <p class="text-lg text-color-g">days to go</p>
        <br>
        <p><a class="btn btn-1 btn-lg" data-toggle="modal" data-target="#supportModal" role="button">SUPPORT THIS PROJECT</a></p>
      </div>
      <br>
      <% for ( var i in project.rewards ) { %>
        <div class="content-frame">
          <h2 class="text-color-b"><%= parseInt(i) + 1 %></h2>
          <p class="text-color-1">From ₱<%= project.rewards[i].start_amount %> to ₱<%= project.rewards[i+1].start_amount - 1 %></p>
          <hr>
          <p class="text-color-lg"><%= project.rewards[i].details %></p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- partial('partials/footer') %>
