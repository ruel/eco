<%- partial('partials/header') %>

<div class="jumbotron parallax-window" data-parallax="scroll" data-image-src="/images/bg.jpg">
  <div class="container center">
    <h1>Let's fund the future together</h1>
    <p>Giving back doesn't have to cost the earth. We're focused on making a better, brighter tomorrow <strong>for all of us</strong>.</p>
    <%if (req.user) { %>
      <a href="/projects"><button class="btn btn-trans btn-lg" id="start-btn">Start today</button></a>
    <% } else { %>
      <a href="/auth/register"><button class="btn btn-trans btn-lg" id="start-btn">Start today</button></a>
    <% } %>
  </div>
</div>

<div id="section-1" class="row">
  <div class="container">
    <h1 class="text-color-1">Become part of the solution to climate change</h1>
    <h3 class="text-color-g">Fund the Future is a sustainable gamified crowdfunding platform that helps green projects become a reality.</h3>
    <br>
    <a href="/projects"><button class="btn btn-1 btn-lg btn-wrap">Sponsor a project and be a climate hero</button></a>
    <br>
    <br>
    <br>
  </div>
</div>

<div id="section-2"  class="row">
  <div class="container">
    <div class="row">
      <div class="col-md-9 col-xs-7">
        <h1 class="text-color-1">Latest projects</h1>
      </div>
      <div class="col-md-1 col-xs-5">
        <a class="btn btn-1 margin-tb btn-lg margin-l" href="/projects" role="button">View all</a>
      </div>
      <div class="col-md-2 mobile-off">
        <a class="btn btn-trans-blk margin-tb btn-lg mobile-off" href="/projects/add" role="button">Start a Project</a>
      </div>
    </div>
  </div>
  <div class="container">
  <br/>
  <% if (projects.length !== 0) { %>
    <% for(var i in projects) { %>
      <% if( ((i+1) % 3) === 1){ %>
      <div class="row">
      <% } %>
    
      <div class="col-lg-4">
        <div class="top-cat center">
          <p><%= projects[i].category.name %></p>
        </div>
        <div class="thumbnail-frame" data-id="<%= projects[i].id %>">
          <center>
            <a href="/projects/<%= projects[i].id %>"><img class="full-image" src="<%= projects[i].image_path %>" alt="<%= projects[i].name %>"></a>
          
            <div class="thumbnail-content">
              <h1 class="text-color-1"><%= projects[i].name %></h1>
              <h4 class="text-color-5"><%= projects[i].description %></h4>
            </div>
            <div class="highlight-line">
              <div class="row center">
                <div class="col-md-12 col-xs-12">
                  <p class="raised-text">â‚±<%= projects[i].total %> RAISED <span class="progress-text">(<%= projects[i].progress %>%)<span></p>
                </div>
              </div>
            </div>
            <div class="thumbnail-content">
              <div class="row">
              </div>
              <div class="row center">
                <div class="col-md-12 col-xs-12">
                  <p class="days-left-text text-color-5"><%= projects[i].days_left %> DAYS TO GO</p>
                </div>
              </div>
            </div>
          </center>
        </div>
      </div>
    
      <% if( ((i+1) % 3) === 0 || projects.length < 3){ %>
      </div>
      <% } %>
    <% } %>
  <% } else { %>
    <div class="row">
      <center>
        <h4 class="text-color-1">Oops, no available projects yet.</h4>
        <a class="btn btn-1" type="button" href="/projects/add">START A PROJECT</a><br>
        <br>
      </center>
    </div>
  <% } %>
</div>
</div>

<%- partial('partials/footer') %>
